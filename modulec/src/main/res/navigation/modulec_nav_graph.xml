<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modulec_nav_graph"
    app:startDestination="@id/fragment_c">

    <fragment
        android:id="@+id/fragment_c"
        android:name="com.tit4nium.modulec.view.CFragment"
        tools:layout="@layout/fragment_c">
        <action
            android:id="@+id/fragment_c_to_fragment_ca"
            app:destination="@id/navigation_ca_level" />
    </fragment>

    <navigation
        android:id="@+id/navigation_ca_level"
        app:startDestination="@id/fragment_ca">

        <fragment
            android:id="@+id/fragment_ca"
            android:name="com.tit4nium.modulec.view.CAFragment"
            tools:layout="@layout/fragment_ca">

            <action
                android:id="@+id/fragment_ca_to_fragment_cb"
                app:destination="@id/fragment_cb" />

        </fragment>

        <fragment
            android:id="@+id/fragment_cb"
            android:name="com.tit4nium.modulec.view.CBFragment"
            tools:layout="@layout/fragment_cb">

            <action
                android:id="@+id/fragment_cb_to_fragment_cc"
                app:destination="@id/fragment_cc" />

        </fragment>


        <fragment
            android:id="@+id/fragment_cc"
            android:name="com.tit4nium.modulec.view.CCFragment"
            tools:layout="@layout/fragment_cb">

            <action
                android:id="@+id/fragment_cc_to_fragment_cd"
                app:destination="@id/fragment_cd" />

        </fragment>

        <fragment
            android:id="@+id/fragment_cd"
            android:name="com.tit4nium.modulec.view.CDFragment"
            tools:layout="@layout/fragment_cb">

            <deepLink
                android:id="@+id/deep_link_fragment_cd"
                app:uri="myapp://androidnavigation/modulec_fragment_cd" />

        </fragment>
    </navigation>

</navigation>